@inherits LayoutComponentBase
@layout LearnStack.Components.Layout.MainLayout

<div class="manage-page">
    <div class="manage-page-header">
        <h1>Account Settings</h1>
        <p>Manage your account preferences and security.</p>
    </div>
    <div class="manage-page-body">
        <nav class="manage-sidebar">
            <ManageNavMenu/>
        </nav>
        <div class="manage-content">
            @Body
        </div>
    </div>
</div>

<style>
    .manage-page {
        max-width: 960px;
        margin: 0 auto;
        padding: 32px 16px;
    }

    .manage-page-header {
        margin-bottom: 32px;
    }

    .manage-page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0 0 8px 0;
    }

    .manage-page-header p {
        color: #64748b;
        font-size: 1rem;
        margin: 0;
    }

    .manage-page-body {
        display: flex;
        gap: 32px;
        align-items: flex-start;
    }

    .manage-sidebar {
        width: 220px;
        flex-shrink: 0;
        position: sticky;
        top: 80px;
    }

    .manage-content {
        flex: 1;
        min-width: 0;
    }

    /* Shared card styles */
    .manage-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(15, 23, 42, 0.05), 0 2px 4px -1px rgba(15, 23, 42, 0.03);
        border: 1px solid #e2e8f0;
        padding: 32px;
    }

    .manage-section-header {
        margin-bottom: 24px;
    }

    .manage-section-header h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0 0 6px 0;
    }

    .manage-section-header p {
        color: #64748b;
        font-size: 0.95rem;
        margin: 0;
    }

    /* Shared form styles */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-size: 0.9rem;
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
    }

    .form-input {
        width: 100%;
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid #cbd5e1;
        background-color: #f8fafc;
        color: #0f172a;
        font-size: 1rem;
        transition: all 0.2s;
        box-sizing: border-box;
    }

    .form-input:focus {
        outline: none;
        border-color: #4f46e5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        background-color: white;
    }

    .form-input:disabled {
        background-color: #e2e8f0;
        color: #64748b;
        cursor: not-allowed;
    }

    /* Shared button styles */
    .btn-primary {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        padding: 12px 24px;
        background: linear-gradient(135deg, #4f46e5, #6366f1);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.2);
        text-decoration: none;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 8px -1px rgba(79, 70, 229, 0.3);
        color: white;
    }

    .btn-danger {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        padding: 12px 24px;
        background: linear-gradient(135deg, #ef4444, #f87171);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.2);
        text-decoration: none;
    }

    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 8px -1px rgba(239, 68, 68, 0.3);
        color: white;
    }

    .btn-secondary {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        padding: 12px 24px;
        background: white;
        color: #334155;
        border: 1px solid #cbd5e1;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background: #f8fafc;
        border-color: #94a3b8;
        color: #0f172a;
    }

    .w-100 {
        width: 100%;
    }

    /* Shared alert styles */
    .alert-warning {
        background-color: #fffbeb;
        border: 1px solid #fde68a;
        color: #92400e;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .alert-warning strong {
        color: #78350f;
    }

    .alert-warning a {
        color: #4f46e5;
        font-weight: 500;
    }

    .alert-danger {
        background-color: #fef2f2;
        border: 1px solid #fecaca;
        color: #b91c1c;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .alert-danger strong {
        color: #991b1b;
    }

    .alert-danger a {
        color: #4f46e5;
        font-weight: 500;
    }

    .alert-info {
        background-color: #eff6ff;
        border: 1px solid #bfdbfe;
        color: #1e40af;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .alert-error {
        background-color: #fef2f2;
        border: 1px solid #fecaca;
        color: #b91c1c;
        padding: 12px 16px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    .validation-message {
        color: #ef4444;
        font-size: 0.85rem;
        margin-top: 6px;
        display: block;
    }

    .text-danger {
        color: #ef4444;
        font-size: 0.85rem;
    }

    /* Button group */
    .btn-group {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-top: 16px;
    }

    /* Modern table */
    .manage-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .manage-table td {
        padding: 16px 0;
        border-bottom: 1px solid #f1f5f9;
        vertical-align: middle;
    }

    .manage-table tr:last-child td {
        border-bottom: none;
    }

    .manage-table .provider-name {
        font-weight: 600;
        color: #0f172a;
    }

    .manage-table .table-actions {
        text-align: right;
    }

    .manage-table .table-actions form {
        display: inline-flex;
        gap: 8px;
    }

    .btn-sm {
        padding: 8px 16px;
        font-size: 0.875rem;
        border-radius: 10px;
    }

    @@media (max-width: 768px) {
        .manage-page-body {
            flex-direction: column;
        }

        .manage-sidebar {
            width: 100%;
            position: static;
        }

        .manage-card {
            padding: 24px;
        }
    }
</style>